<!DOCTYPE html>
<html lang="en">
    <%- include ("../partials/head.ejs") %>
<body>
    <%- include('../partials/header') %>
    <h1>Login</h1>
    <form action="/sessions" method="POST">
        <div class="form-container-2">
            <div class="input">Username: <input required type="text" name="username"/><br></div>
            <div class="input" >Password: <input required type="password" id="userInput" name="password"><br></div>
            <input type="checkbox" onclick="myFunction()">Show Password
        </div>
        <h1></h1>
        <input type="submit" name="" value="Login" class="btn"/>
    </form>
    <%- include ("../partials/footer.ejs") %>

    <script>
        function myFunction() {
          var pw = document.getElementById("userInput");
          if (pw.type === "password") {
            pw.type = "text";
          } else {
            pw.type = "password";
          }
        }
    </script>
</body>
</html>
